<odoo>
    <record model="ir.ui.view" id="crm_priority_tree">
        <field name="name">Priority</field>
        <field name="model">crm.priority</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="crm_priority_action">
        <field name="name">Priority</field>
        <field name="res_model">crm.priority</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem
            id="menu_crm_priority"
            name="Priority"
            parent="crm.menu_crm_config_lead"
            action="crm_priority_action"
            sequence="7"/>
</odoo>